<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <div class="flex flex-row mb-1 sm:mb-0 justify-between w-full">
      <h2 class="text-2xl leading-tight">Votre Panier</h2>
    </div>
    <div class="mt-2 bg-white dark:bg-gray-800 overflow-hidden shadow sm:rounded-lg">
      <table class="min-w-full leading-normal">
        <thead>
          <tr>
            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Item</th>
            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Quantité</th>
            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Prix</th>
            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Sous total</th>
          </tr>
        </thead>
        <tbody>
          <% let subtotal = 0; %> <% items.forEach(item => { %> <% const itemSubtotal = item.quantity * item.price; %> <% subtotal += itemSubtotal; %>
          <tr>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"><%= item.name %></td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <input type="number" min="0" value="<%= item.quantity %>" id="<%= item._id %>" onchange="updateQuantity(this.id, this.value)" class="form-input px-3 py-2" />
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">$<%= item.price.toFixed(2) %></td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">$<%= itemSubtotal.toFixed(2) %></td>
          </tr>
          <% }); %>
          <tr>
            <td colspan="3" class="text-left px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-xs font-semibold text-gray-600 uppercase tracking-wider">Sous-total:</td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">$<%= subtotal.toFixed(2) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <!-- aligné sur le bord inférieur droit du tableau, avec une marge en haut, un bouton bleu "tailwind" qui dit "checkout". -->
  <div class="flex justify-end">
    <form id="check-out-form" action="/api/checkout" method="POST">
      <!-- Paypal -->
      <div id="paypal"></div>
    </form>
  </div>
</div>
