<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Nous Contacter</h1>
  <form class="max-w-md mx-auto">
    <div class="mb-6">
      <label for="name" class="block mb-2 text-xl">Nom</label>
      <input type="text" id="name" name="name" class="w-full px-4 py-2 border border-gray-300 rounded" />
    </div>
    <div class="mb-6">
      <label for="email" class="block mb-2 text-xl">Courriel</label>
      <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded" />
    </div>
    <div class="mb-6">
      <label for="message" class="block mb-2 text-xl">Message</label>
      <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded"></textarea>
    </div>
    <button type="submit" class="bg-orange-500 hover:bg-blue-300 text-white text-xl font-bold py-2 px-4 rounded ease-in duration-200">Submit</button>
  </form>
</div>
